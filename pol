  <script>
    function createPetal() {
      const petal = document.createElement('div');
      petal.classList.add('petal');
      petal.innerHTML = 'üåπ'; // Rose petal emoji
      const left = Math.random() * 100;
      const drift = (Math.random() - 0.5) * 200;
      petal.style.left = left + 'vw';
      petal.style.setProperty('--drift', drift + 'px');
      const size = Math.random() * (1.5 - 0.8) + 0.8;
      petal.style.fontSize = size + 'rem';
      petal.style.animationDuration = (Math.random() * 10 + 10) + 's';
      petal.style.animationDelay = Math.random() * 5 + 's';
      document.getElementById('petals').appendChild(petal);
      setTimeout(() => petal.remove(), 20000);
    }
    
    setInterval(createPetal, 500);
    for(let i = 0; i < 10; i++) {
      setTimeout(createPetal, i * 200);
    }
    
    // Scattered berries
    const berriesContainer = document.getElementById('berries');
    for(let i = 0; i < 15; i++) {
      const berry = document.createElement('div');
      berry.classList.add('berry');
      berry.innerHTML = 'üçì';
      berry.style.left = Math.random() * 100 + '%';
      berry.style.top = Math.random() * 100 + '%';
      berry.style.fontSize = (Math.random() * 0.5 + 0.5) + 'rem';
      berry.style.opacity = Math.random() * 0.5 + 0.3;
      berriesContainer.appendChild(berry);
    }
  </script>

